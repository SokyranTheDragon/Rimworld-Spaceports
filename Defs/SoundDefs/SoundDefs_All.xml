<Defs>

  <SoundDef>
    <defName>Spaceports_ShuttleAmbiance</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Misc/Shuttle/Shuttle_Idle_Ambience_Loop_01a</clipPath>
          </li>
        </grains>
        <volumeRange>10</volumeRange>
        <distRange>10~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>Spaceports_Landing</defName>  
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>landing</clipFolderPath>
          </li>
        </grains>
        <volumeRange>40~40</volumeRange>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>Spaceports_Leaving</defName>  
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Misc/Shuttle/Takeoff</clipFolderPath>
          </li>
        </grains>
        <volumeRange>30~30</volumeRange>
        <tempoAffectedByGameSpeed>true</tempoAffectedByGameSpeed>
      </li>
    </subSounds>
  </SoundDef>

</Defs>